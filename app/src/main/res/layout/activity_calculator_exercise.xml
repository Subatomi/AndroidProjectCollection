<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorExercise">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/equationUpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/equationLower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbutton1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="7"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="8"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="9"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="\\"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbutton5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="4"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="5"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="6"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="*"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbutton9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="1"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="2"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="3"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="-"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbutton13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#A4A4A4"
                    android:text="."
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#A4A4A4"
                    android:text="0"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#A4A4A4"
                    android:text="+"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="="
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>