<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorExercise">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/equationUpper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:scrollHorizontally="false"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <TextView
                    android:id="@+id/equationLower"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="48sp" />
            </HorizontalScrollView>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbutton7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="7"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="8"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="9"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbuttonDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="/"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbutton4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="4"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="5"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="6"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbuttonMul"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="*"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbutton1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="1"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="2"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#333333"
                    android:text="3"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbuttonSub"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="-"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/calcbuttonDot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#A4A4A4"
                    android:text="."
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbutton0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#A4A4A4"
                    android:text="0"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbuttonAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#A4A4A4"
                    android:text="+"
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />

                <Button
                    android:id="@+id/calcbuttonEqual"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:backgroundTint="#FE9E0A"
                    android:text="="
                    android:textSize="24sp"
                    app:cornerRadius="15dip" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>